{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2016",
    "declaration": false,
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
  },
  "exclude": [
    "node_modules"
  ],
  "resolve": {
    "extensions": [
      ".ts",
      ".hbs"
    ]
  }
}
